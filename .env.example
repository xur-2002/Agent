# Feishu Integration (REQUIRED)
FEISHU_WEBHOOK_URL=https://open.feishu.cn/open-apis/bot/v2/hook/YOUR-TOKEN-HERE
FEISHU_MENTION=  # Optional: user_id to mention on failures

# State Persistence
PERSIST_STATE=local  # Options: local, repo, bitable
STATE_FILE=state.json  # Where to save task state (local mode)

# Concurrency & Reliability
MAX_CONCURRENCY=5
RETRY_COUNT=2
RETRY_BACKOFF=1s,3s,7s  # Exponential backoff timings

# Timezone & Execution
TIMEZONE=UTC
DRY_RUN=0  # Set to 1 to test without actually executing tasks

# GitHub (for repo persistence mode - requires GitHub Actions)
GITHUB_TOKEN=  # Automatically set in GitHub Actions

# Optional: Bitable Backend
# Only set these if you want to use Bitable for state storage
FEISHU_APP_ID=
FEISHU_APP_SECRET=
FEISHU_TABLE_APP_ID=
FEISHU_TABLE_TABLE_ID=
